@model ListTicketTypeViewModel

<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">TicketTypeStatus</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticketType in Model.TicketTypes)
                {
                    <tr>
                        <th scope="row">@ticketType.Id</th>
                        <td>@ticketType.Name</td>
                        <td>@ticketType.TicketTypeStatus</td>
                        <td>

                            <a asp-controller="TicketType" asp-action="Edit" asp-route-id="@ticketType.Id"
                            class="btn btn-sm btn-warning"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                            <a asp-controller="TicketType" asp-action="Delete" asp-route-id="@ticketType.Id"
                            onclick="return confirm('Are you shure you want to delete this TicketType?')"
                            class="btn btn-sm btn-danger"><i class="fa-regular fa-square-minus"></i> Excluir</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col">
        <a asp-controller="TicketType" asp-action="Create" class="btn btn-primary">New TicketType</a>
    </div>
</div>
