@model ListProjectViewModel

<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Short Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">ProjectColor</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">ProjectStatus</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <th scope="row">@project.Id</th>
                        <td>@project.Name</td>
                        <td>@project.ShortName</td>
                        <td>@project.Description</td>
                        <td>@project.ProjectColor</td>
                        <td>@project.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>@project.ProjectStatus</td>
                        <td>

                            <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id"
                            class="btn btn-sm btn-warning"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                            <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.Id"
                            onclick="return confirm('Are you shure you want to delete this project?')"
                            class="btn btn-sm btn-danger"><i class="fa-regular fa-square-minus"></i> Excluir</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col">
        <a asp-controller="Project" asp-action="Create" class="btn btn-primary">New Project</a>
    </div>
</div>
